<!-- Modal for Editing the score -->
<div class="modal fade" id="editScore" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirmation Box</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="updateForm">
            <label for="studentID">Student ID</label>
            <input type="text" id="studID" name='studID' disabled>
            <label for="studentName">Student Name</label>
            <input type="text" id="studName" name='studName'>
            <label for="Grade">Score</label>
            <input type="text" id="studScore" name="studScore">
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-dismiss="modal" id="close3">Close</button>
      </div>
    </div>
  </div>
</div>
{{!-- End of the modal --}}

<!-- Modal for Adding new score -->
<div class="modal fade" id="new-score" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
