    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirmation Box</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="insert-form">
            <label for="studentID">Student ID</label>
            <input type="text" name="Student_ID" id="Student_ID">
            <label for="studentName">Student Name</label>
            <input type="text" name="Student_Name" id="Student_Name">
            <label for="Grade">Score</label>
            <input type="text" name="Student_Score" id="Student_Score">
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-dismiss="modal" id="close2">Close</button>
      </div>
    </div>
  </div>
</div>
{{!-- End of the modal --}}

<!-- Modal for confirmation -->
<div class="modal fade" id="confirmBox" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
